{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"lib": [
			"es2015",
			"dom"
		],
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
