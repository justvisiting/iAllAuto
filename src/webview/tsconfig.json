{
  "compilerOptions": {
    "module": "es6",
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "outDir": "../../out/webview",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
